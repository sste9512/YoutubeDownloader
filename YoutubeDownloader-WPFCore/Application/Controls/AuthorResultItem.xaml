<UserControl x:Class="YoutubeDownloader_WPFCore.Application.Controls.AuthorResultItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YoutubeDownloader_WPFCore.Application.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <Image Height="85" Width="130" Name="AuthIcon" Margin="0,0,0,0" Stretch="Fill" />
        <StackPanel Orientation="Vertical" MinWidth="200" MinHeight="150">
                 <Label Name="AuthorName"></Label>
                 <Label Name="AuthorDescription"></Label>
          </StackPanel>
    </StackPanel>
</UserControl>
