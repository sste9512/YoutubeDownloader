<UserControl x:Class="YoutubeDownloader_WPFCore.Controls.VideoInfoPanel.View.VideoInfoPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Border BorderBrush="LightGray" BorderThickness="1">
        <StackPanel Orientation="Vertical"
                    Width="400"
                    Margin="10">
            <ScrollViewer Height="620"
                         MaxHeight="620"
                         Margin="5">
                <StackPanel Orientation="Vertical">
                    <Label Content="{Binding VideoTitle}"
                           Foreground="Black"
                           FontSize="20"
                           FontWeight="DemiBold"
                           Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Image Source="{Binding VideoThumbnail}"
                               Width="150"
                               Height="100"
                               HorizontalAlignment="Left"
                               Margin="0,0,10,0"/>
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <materialDesign:PackIcon Kind="ThumbUp"
                                                       Opacity="1"
                                                       Foreground="Gray"
                                                       Width="25"
                                                       Height="25"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,5,0"/>
                                <Label Content="{Binding LikesCount}"
                                       Foreground="Gray"
                                       FontSize="12"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       HorizontalContentAlignment="Center"
                                       Height="auto"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <materialDesign:PackIcon Kind="ThumbDown"
                                                       Opacity="1"
                                                       Foreground="Gray"
                                                       Width="25"
                                                       Height="25"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,5,0"/>
                                <Label Content="{Binding DislikesCount}"
                                       Foreground="Gray"
                                       FontSize="12"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       HorizontalContentAlignment="Center"
                                       Height="auto"/>
                            </StackPanel>
                            <Label Content="{Binding ViewCount}"
                                   Foreground="Gray"
                                   FontSize="12"
                                   HorizontalAlignment="Left"
                                   HorizontalContentAlignment="Center"
                                   Height="auto"/>
                        </StackPanel>
                    </StackPanel>

                    <Label Content="{Binding VideoAuthor}" 
                           Foreground="Black" 
                           FontSize="14"
                           Margin="0,0,0,5"/>
                    <Label Content="{Binding VideoPublishedDate}" 
                           Foreground="LightGray" 
                           FontSize="12"
                           Margin="0,0,0,5"/>
                    <Label Content="{Binding VideoDescription}" 
                           Foreground="Black"
                           Margin="0,0,0,10"/>

                    <Separator Background="DarkGray" 
                              Height="0.7" 
                              Margin="5"/>

                    <Label Content="Video Info" 
                           Foreground="Black" 
                           FontSize="19" 
                           FontWeight="DemiBold"
                           Margin="0,10,0,5"/>
                    <Label Content="{Binding VideoDuration}" 
                           Foreground="DarkGray"
                           Margin="0,0,0,5"/>
                    <Label Content="{Binding VideoUrl}" 
                           Foreground="DarkGray"
                           Margin="0,0,0,5"/>
                    <Label Content="{Binding VideoExtension}" 
                           Foreground="DarkGray"
                           Margin="0,0,0,10"/>

                    <Separator Background="DarkGray" 
                              Height="0.7" 
                              Margin="5"/>

                    <Label Content="Availability" 
                           Foreground="Black" 
                           FontSize="17"
                           Margin="0,10,0,5"/>
                    <Label Content="{Binding VideoAvailable}" 
                           Foreground="DarkGray"
                           Margin="0,0,0,5"/>
                    <Label Content="{Binding SoundAvailable}" 
                           Foreground="DarkGray"
                           Margin="0,0,0,5"/>
                    <Label Content="{Binding MixedAvailable}" 
                           Foreground="DarkGray"
                           Margin="0,0,0,5"/>
                </StackPanel>
            </ScrollViewer>

            <Button VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Margin="5"
                    Height="50"
                    Width="260"
                    BorderBrush="Transparent"
                    materialDesign:ElevationAssist.Elevation="Dp8"
                    Command="{Binding DownloadVideoCommand}">
                <Button.ToolTip>
                    <ToolTip Background="#212121" 
                             BorderBrush="CadetBlue" 
                             BorderThickness="1" 
                             Padding="12"
                             materialDesign:ElevationAssist.Elevation="Dp8">
                        <StackPanel>
                            <TextBlock FontWeight="Bold"
                                      FontSize="14"
                                      Margin="0,0,0,5">Open file</TextBlock>
                            <TextBlock>
                                Choose the a custom output directory for the current images to be placed
                                <LineBreak/>
                            </TextBlock>
                            <Border BorderBrush="White"
                                    BorderThickness="0,0.6,0,0"
                                    Margin="0,8"/>
                            <WrapPanel>
                                <TextBlock FontStyle="Italic">Press F1 for more help</TextBlock>
                            </WrapPanel>
                        </StackPanel>
                    </ToolTip>
                </Button.ToolTip>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Image Source="/Resources/file_icon.png"
                           Width="20"
                           Height="20"
                           Margin="0,0,5,0"/>
                    <Label Content="Download Video"
                           Foreground="White"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           HorizontalContentAlignment="Center"
                           Height="auto"/>
                </StackPanel>
            </Button>

            <Button VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Margin="5"
                    Height="50"
                    Width="260"
                    BorderBrush="Transparent"
                    Command="{Binding DownloadAndAddToPlaylistCommand}"
                    materialDesign:ElevationAssist.Elevation="Dp2">
                <Button.ToolTip>
                    <ToolTip Background="#212121"
                             BorderBrush="CadetBlue"
                             BorderThickness="1"
                             Padding="12"
                             materialDesign:ElevationAssist.Elevation="Dp2">
                        <StackPanel>
                            <TextBlock FontWeight="Bold"
                                      FontSize="14"
                                      Margin="0,0,0,5">Open file</TextBlock>
                            <TextBlock>
                                Choose the a custom output directory for the current images to be placed
                                <LineBreak/>
                            </TextBlock>
                            <Border BorderBrush="White"
                                    BorderThickness="0,0.6,0,0" 
                                    Margin="0,8"/>
                            <WrapPanel>
                                <TextBlock FontStyle="Italic">Press F1 for more help</TextBlock>
                            </WrapPanel>
                        </StackPanel>
                    </ToolTip>
                </Button.ToolTip>
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Image Source="/Resources/file_icon.png"
                           Width="20"
                           Height="20"
                           Margin="0,0,5,0"/>
                    <Label Content="Download and Add to Playlist"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           HorizontalContentAlignment="Center"
                           Height="auto"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Border>
</UserControl>